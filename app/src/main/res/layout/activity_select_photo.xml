<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPhotoActivity">

    <TextView
        android:id="@+id/txtTestPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="306dp"
        android:text="Test pic from Yverdon"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="35dp"
        android:text="Photo from Smapshot"
        android:textSize="12dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/selTestPhoto"
        android:layout_width="165dp"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="119dp"
        android:scaleType="centerCrop"
        android:src="@drawable/st_roch_test"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:onClick="selectTest"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/selDia303"
        android:layout_width="165dp"
        android:layout_height="168dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="34dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dia_303_12172"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:onClick="selectDia" />

    <Button
        android:id="@+id/btnPhoto"
        android:layout_width="140dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="12dp"
        android:onClick="openCustomCam"
        android:text="Take Photo" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="140dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="12dp"
        android:onClick="mainMenu"
        android:text="Go back" />

</RelativeLayout>