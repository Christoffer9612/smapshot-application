<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/percentageAccuracyAzimuth"
        android:layout_width="400dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="271dp"
        android:gravity="center"
        android:text="azimuth"
        android:textColor="#444444"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/percentageAccuracyTilt"
        android:layout_width="400dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="251dp"
        android:gravity="center"
        android:text="tilt"
        android:textColor="#444444"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/percentageAccuracyRoll"
        android:layout_width="399dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="231dp"
        android:gravity="center"
        android:text="roll"
        android:textColor="#444444"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="You successfully took a picture!"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="12dp"
        android:onClick="openMainActivity"
        android:text="Go back"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnRetake"
        android:layout_width="140dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="12dp"
        android:onClick="openSelectPhoto"
        android:text="Retake" />

    <TextView
        android:id="@+id/txtOldPhoto"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oldPhoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Old photo"
        android:textColor="#444444"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtNewPhoto"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oldPhoto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="81dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="New photo"
        android:textColor="#444444"
        android:textSize="20dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/oldPhoto"
        android:layout_width="185dp"
        android:layout_height="213dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/black_rounded_corner"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/LessRoundedSquare" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/newPhoto"
        android:layout_width="185dp"
        android:layout_height="213dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/grey_rounded_corner"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/LessRoundedSquare" />


    <TextView
        android:id="@+id/newParams"
        android:layout_width="185dp"
        android:layout_height="70dp"
        android:layout_below="@+id/newPhoto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/grey_rounded_corner"
        android:gravity="center"
        android:text="New params \n test \n test"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/loadingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newPhoto"
        android:layout_alignRight="@+id/newPhoto"
        android:layout_alignBottom="@+id/newPhoto"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="97dp"
        android:gravity="center"
        android:text="Loading photo..."
        android:textSize="14dp" />

    <TextView
        android:id="@+id/oldParams"
        android:layout_width="185dp"
        android:layout_height="70dp"
        android:layout_below="@+id/oldPhoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/black_rounded_corner"
        android:gravity="center"
        android:text="Old params \n test \n test"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#444444"
        android:textOff="Your grade: X ðŸŽ‰"
        android:textOn="Your grade: X ðŸŽ‰"
        android:textSize="32dp"
        android:textStyle="bold" />


</RelativeLayout>